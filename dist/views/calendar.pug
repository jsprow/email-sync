extends layout

block calendar
  h2 Calendar
  table.table
    thead.thead-light
      th(scope="col") Subject
      th(scope="col") Start
      th(scope="col") End
      th(scope="col") Attendees
    tbody
      each event in events
        tr
          td= event.subject
          td= `${event.start.dateTime} ( ${event.start.timeZone} )`
          td= `${event.end.dateTime} ( ${event.end.timeZone} )`
          td
            ul.list-unstyled
              each attendee in event.attendees
                li.border.p-1(title=attendee.emailAddress.address)= attendee.emailAddress.name
